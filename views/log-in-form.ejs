<%- extend('layout',{isLoggedIn:false,isMember:false})%>
<h1 class="text-5xl text-center mt-5">Login</h1>
<form
  class="absolute border-2 rounded-2xl border-slate-500 p-5 mt-2 top-1/2 left-1/2 flex flex-col justify-between translate-x-[-50%] translate-y-[-50%] w-2/5 h-1/3"
  action=""
  method="POST"
>
  <div class="flex justify-between">
    <label class="text-4xl" for="email">Email: </label>
    <input
      class="border-[1px] border-black rounded-xl text-2xl p-2 h-[45px]"
      type="email"
      id="email"
      name="username"
      required
    />
  </div>
  <div class="flex justify-between">
    <label class="text-4xl" for="password">Password: </label>
    <input
      class="border-[1px] border-black rounded-xl text-2xl p-2 h-[45px]"
      type="password"
      id="password"
      name="password"
      required
    />
  </div>
  <button
    class="text-4xl bg-slate-500 text-white p-2 rounded-2xl self-center w-fit transition-all duration-200 hover:scale-105"
    type="submit"
  >
    Login
  </button>
</form>
