<%- extend('layout',{user:user})%>
<div class="text-5xl text-center mt-5 flex flex-col gap-5">
  <h1>Ready to become a member of the clubhouse <%=user.firstName%>?</h1>
  <p>Enter the secret password!</p>
</div>
<form
  class="absolute border-2 rounded-2xl border-slate-500 p-5 mt-2 top-1/2 left-1/2 flex flex-col justify-between translate-x-[-50%] translate-y-[-50%] w-2/5 h-1/5"
  action=""
  method="POST"
>
  <label for="password"></label>
  <input
    class="border-[1px] border-black rounded-xl text-2xl p-2 h-[45px] w-1/3 self-center"
    type="password"
    id="password"
    name="password"
    required
  />
  <button
    class="text-4xl bg-slate-500 text-white p-2 rounded-2xl self-center w-fit transition-all duration-200 hover:scale-105"
    type="submit"
  >
    Join
  </button>
</form>
<%if(errors){%>
<ul class="text-3xl ml-10 text-red-500">
  <%errors.forEach(error => {%>
  <li><%= error.msg%></li>
  <%})%>
</ul>

<%}%>
